# CredentialGuard Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=8000
ENVIRONMENT=production

# CORS Configuration
FRONTEND_URL=http://localhost:3000
FRONTEND_URL_PROD=https://your-frontend-domain.com

# CMS NPPES Registry (No authentication required - public API)
CMS_NPPES_API_URL=https://npiregistry.cms.hhs.gov/api/
CMS_NPPES_TIMEOUT=10

# Logging
LOG_LEVEL=INFO
